						<li data-target="#bigSliderBanner" data-slide-to="1"></li>
						<li data-target="#bigSliderBanner" data-slide-to="2"></li>
					</ol>
					<div class="carousel-inner">
						<div class="carousel-item active">
							<img class="d-block w-100 " style="height: 300px" src="/images/banner6.jpg"
								alt="First slide">
						</div>
						<div class="carousel-item">
							<img class="d-block w-100" style="height: 300px" src="/images/banner7.jpg"
								alt="Second slide">
						</div>
						<div class="carousel-item">
							<img class="d-block w-100" style="height: 300px" src="/images/banner9.jpg" alt="Third slide">
						</div>
					</div>
					<a class="carousel-control-prev" href="#bigSliderBanner" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#bigSliderBanner" role="button" data-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
			</div>
			<!--  Termina el modulo sacado de boostrap-->
		</div>
	</div>

	<!--  Meto la segunda ROW, tiene los diferenciales del negocio-->
	<div class="container mb-4 text-center">
		<div class="row">
			<div class="col-4">
				<p> <i class="fas fa-credit-card"></i> Cuotas y todos los medios de pago!</p>
			</div>

			<div class="col-4">
				<p> <i class="fas fa-handshake"></i> Ayudamos al medioambiente</p>
			</div>

			<div class="col-4">
				<p> <i class="fas fa-shipping-fast"></i> Entrega rapida en todo el pais</p>
			</div>
			<!--Termino la segunda ROW-->
		</div>
	</div>


<!-- Meto una fila para el row de productos-->
<div class="container mb-4">
	<div class="pb-1 pl-2">
		<h3 style="color:darkslategrey"><b>NOVEDADES DE LA SEMANA</b></h1>
	</div>
	<!-- Primera row del listado de productos-->
	<div class="row">
		<% products.slice(0,4).forEach(product => { %>
			<div class="col-6 col-md-3"> 
				<a style="color: grey" href="/products/<%=`${product.id}`%>"> 
					<div class="card flex mx-1 mb-4">
						<img src="/./images/productImages/<%=`${product.image}`%>" class="card-img-top img-circle" alt="Responsive Image" >							
					
						<div class="card-body" style="font-size: 14px; height: 150px; width: 200px">
							<h5 class="card-title" style="font-size: 16px"><%=`${product.name}`%></h5>
							<% if(product.sale_price == null) { %>
								<p style="font-weight: bold; font-size: 18px"> $ <%=`${product.list_price}`%> </p>
							<% } else{ %>
								<strike> $ <%=`${product.list_price}`%>  </strike>
								<p style="color: red; font-weight: bold; font-size: 18px">Oferta! $<%= `${product.sale_price}`%> </p>
							<%} %>
						</div>
					</div>
				</a>
		</div>
		<% }) %>
	</div>
</div>

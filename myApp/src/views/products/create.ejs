<!DOCTYPE html>
<html lang="en">
	<%- include('../partials/head',{title:'Formulario de creacion de producto'});%>

<body>
		<%- include('../partials/header');%>
<div class="container mb-2 mt-2">
<form action="/products/create" method="POST" enctype="multipart/form-data">
	<div class="form-row">
		<div class="form-group col-12">
			<h2>Ingrese los datos del producto</h2>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-12">
			<label>Nombre de Producto</label>
			<input type="text" name="name" class="form-control" placeholder="Ej: Salsa de Tomate Oganica">
		</div>
	</div>
	<div class="form-row">
	    <div class="form-group col-12 col-sm-6 col-md-3">
			 <label>Marca</label>
			 <select name="brand" class="form-control">
				 <% brands.forEach(oneBrand => { %>
					 <option value="<%= oneBrand.id %>"> <%=oneBrand.name  %> </option>  
				 <% }) %>
			 </select>
		</div>

		<div class="form-group col-12 col-sm-6 col-md-3">
			<label>Categoria</label>
			<select name="category" class="form-control" >
				<% categories.forEach(oneCategory => { %>
					<option value="<%= oneCategory.id %>"> <%=oneCategory.name  %> </option>  
				<% }) %>
			</select>
		</div>
		<div class="form-group col-12 col-sm-6 col-md-3">
			<label>Color</label>
			<select name="color" class="form-control">
				<% colors.forEach(oneColor => { %>
					<option value="<%= oneColor.id %>"> <%=oneColor.name  %> </option>  
				<% }) %>
			</select>
		</div>
		<div class="form-group col-12 col-sm-6 col-md-3">
			<label>Modelo</label>
			<input type="text" name="model" class="form-control" placeholder="Ej: 150Ml">
	   </div>
	</div>
	<div class="form-row">
		<div class="form-group col-12">
			<label>Descripcion</label>
			<input type="text" name="description" class="form-control" placeholder="Ej:La salsa de tomate organica tiene muchas cosas ricas que te hacen sano fuerte y bonito">
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-12 custom-file">
			<label class="custom-file-label" for="customFile">Seleccione una imagen</label>
			<input type="file" name="image" class="form-control custom-file-input">
		</div>
	</div>
	<div class="form-row mt-2">
		<div class="form-group col-12">
			<h4>Ingrese las medidas de la caja</h4>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-12 col-sm-6 col-md-3">
			<label>Ancho</label>
			<input type="number" name="width" class="form-control" placeholder="Ej: 10">
		</div>
		<div class="form-group col-12 col-sm-6 col-md-3">
			<label>Alto</label>
			<input type="number" name="height" class="form-control" placeholder="Ej: 45">
		</div>
		<div class="form-group col-12 col-sm-6 col-md-3">
			<label>Profundidad</label>
			<input type="number" name="length" class="form-control" placeholder="Ej: 15">
		</div>
		<div class="form-group col-12 col-sm-6 col-md-3">
			<label>Peso</label>
			<input type="number" name="weight" class="form-control" placeholder="Ej: 15KG">
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-12">
		<h4>Ingrese los datos para la venta</h4>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-12 col-sm-4">
			<label>Precio de Lista</label>
			<input type="number" name="list_price" class="form-control" placeholder="Ej:$3500">
		</div>
		<div class="form-group col-12 col-sm-4">
			<label>Precio de Venta</label>
			<input type="number" name="sale_price" class="form-control" placeholder="Ej:$2900">
		</div>
		<div class="form-group col-12 col-sm-4">
			<label>Stock</label>
			<input type="number" name="stock" class="form-control" placeholder="10">
		</div>
	</div>
	<button type="submit" class="btn btn-primary">Crear</button>
</form>
</div>
	<%- include('../partials/footer');%>
	<%- include('../partials/scripts');%>
</body>	
</html>


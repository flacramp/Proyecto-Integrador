<!DOCTYPE html>
<html lang="en">
	<%- include('../partials/head',{title:'Formulario de creacion de producto'});%>

<body>
		<%- include('../partials/header');%>
<div class="container mb-2 mt-2">
<form action="/products/edit/<%=products.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
	<div class="form-row">
		<div class="form-group col-12">
			<h2>Modo Edici√≥n: Datos actuales del producto</h2>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-12">
			<label>Nombre de Producto</label>
			<input type="text" name="name" class="form-control" value="<%=products.name%>">
		</div>
	</div>
	<div class="form-row">
	    <div class="form-group col-12 col-sm-6 col-md-3">
			<label>Marca</label>
			<select name="brand" class="form-control">
				<option value="<%= products.brands.id %>" active> <%=products.brands.name  %> </option> 
				<% brands.forEach(oneBrand => { %>
					<% if(oneBrand.id !=products.brands.id){ %> 
				<option value="<%= oneBrand.id %>"> <%=oneBrand.name  %> </option>
				<% }}) %>
			</select>
	   </div>
	    <div class="form-group col-12 col-sm-6 col-md-3">
		     <label>Modelo</label>
		     <input type="text" name="model" class="form-control" value="<%=products.model%>">
		</div>
		<div class="form-group col-12 col-sm-6 col-md-3">
			<label>Categoria</label>
			<select name="category" class="form-control">
				<option value="<%= products.categories.id %>" active> <%=products.categories.name  %> </option> 
				<% categories.forEach(oneCategory => { %>
					<% if(oneCategory.id !=products.categories.id){ %> 
				<option value="<%= oneCategory.id %>"> <%=oneCategory.name  %> </option>
				<% }}) %>
			</select>

		</div>
		<div class="form-group col-12 col-sm-6 col-md-3">
			<label>Color</label>
			<select name="color" class="form-control">
				<option value="<%= products.colors.id %>" active> <%=products.colors.name  %> </option> 
				<% colors.forEach(oneColor => { %>
					<% if(oneColor.id !=products.colors.id){ %> 
				<option value="<%= oneColor.id %>"> <%=oneColor.name  %> </option>
				<% }}) %>
			</select>

		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-12">
			<label>Descripcion</label>
			<input type="text" name="description" class="form-control" value="<%=products.description%>">
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-12 custom-file">
			<label class="custom-file-label" for="customFile"><%= products.image  %> </label>
			<input type="file" name="image" class="form-control custom-file-input">
		</div>
	</div>
	<div class="form-row mt-2">
		<div class="form-group col-12">
			<h4>Medidas de la caja</h4>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-12 col-sm-6 col-md-3">
			<label>Ancho</label>
			<input type="number" name="width" class="form-control" value="<%=products.width%>">
		</div>
		<div class="form-group col-12 col-sm-6 col-md-3">
			<label>Alto</label>
			<input type="number" name="height" class="form-control" value="<%=products.height%>">
		</div>
		<div class="form-group col-12 col-sm-6 col-md-3">
			<label>Profundidad</label>
			<input type="number" name="length" class="form-control" value="<%=products.length%>">
		</div>
		<div class="form-group col-12 col-sm-6 col-md-3">
			<label>Peso</label>
			<input type="number" name="weight" class="form-control" value="<%=products.weight%>">
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-12">
		<h4>Datos para la venta</h4>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-12 col-sm-4">
			<label>Precio de Lista</label>
			<input type="number" name="list_price" class="form-control" value="<%=products.list_price%>">
		</div>
		<div class="form-group col-12 col-sm-4">
			<label>Precio de Venta</label>
			<input type="number" name="sale_price" class="form-control" value="<%=products.sale_price%>">
		</div>
		<div class="form-group col-12 col-sm-4">
			<label>Stock</label>
			<input type="number" name="stock" class="form-control" value="<%=products.stock%>">
		</div>
	</div>
	<button type="submit" class="btn btn-primary">Guardar modificaciones</button>
</form>
</div>
	<%- include('../partials/footer');%>
	<%- include('../partials/scripts');%>
</body>	
</html>

